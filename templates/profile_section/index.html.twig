{% extends 'base.html.twig' %}

{% block title %}ProfileSection index{% endblock %}

{% block body %}
    <h1>ProfileSection index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Description</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for profile_section in profile_sections %}
            <tr>
                <td>{{ profile_section.id }}</td>
                <td>{{ profile_section.title }}</td>
                <td>{{ profile_section.description }}</td>
                <td>
                    <a href="{{ path('app_profile_section_show', {'id': profile_section.id}) }}">show</a>
                    <a href="{{ path('app_profile_section_edit', {'id': profile_section.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_profile_section_new') }}">Create new</a>
{% endblock %}
