{% extends 'base.html.twig' %}

{% block title %}About{% endblock %}

{% block body %}
    <h1>About</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ about.id }}</td>
            </tr>
            <tr>
                <th>Firstname</th>
                <td>{{ about.firstname }}</td>
            </tr>
            <tr>
                <th>Lastname</th>
                <td>{{ about.lastname }}</td>
            </tr>
            <tr>
                <th>DateOfBirth</th>
