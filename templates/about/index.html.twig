{% extends 'base.html.twig' %}

{% block title %}About index{% endblock %}

{% block body %}
    <h1>About index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Firstname</th>
                <th>Lastname</th>
                <th>DateOfBirth</th>
                <th>Email</th>
                <th>Address</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for about in abouts %}
            <tr>
                <td>{{ about.id }}</td>
                <td>{{ about.firstname }}</td>
                <td>{{ about.lastname }}</td>
                <td>{{ about.dateOfBirth ? about.dateOfBirth|date('Y-m-d') : '' }}</td>
                <td>{{ about.email }}</td>
                <td>{{ about.address }}</td>
                <td>
                    <a href="{{ path('app_about_show', {'id': about.id}) }}">show</a>
                    <a href="{{ path('app_about_edit', {'id': about.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_about_new') }}">Create new</a>
{% endblock %}
