    </head>
    <body>
    {% block header %}
        {% if  portfolio is defined and portfolio.id is not null %}
            <nav class="header-container">
                <a href="{{ path('app_index') }}" class="{{ app.request.attributes.get('_route') == 'app_index' ? 'active' : '' }}">Home</a>
