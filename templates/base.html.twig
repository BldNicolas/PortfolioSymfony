                <a href="{{ path('app_portfolio_experience_show', {'id': portfolio.id}) }}" class="{{ app.request.attributes.get('_route') == 'app_portfolio_experience_show' ? 'active' : '' }}">Experience</a>
            </nav>
        {% endif %}
    {% endblock %}

        <main>            
            {% block body %}

            {% endblock %}
        </main>
    </body>
</html>